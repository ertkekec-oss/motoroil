{
    "name": "motoroil",
    "script": "npm",
    "args": "start",
    "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
    },
    "instances": 1,
    "exec_mode": "cluster",
    "watch": false,
    "max_memory_restart": "500M",
    "error_file": "./logs/pm2-error.log",
    "out_file": "./logs/pm2-out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "autorestart": true,
    "max_restarts": 10,
    "min_uptime": "10s"
}